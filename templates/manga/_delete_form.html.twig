<form method="post" action="{{ path('manga_delete', {'id': manga.id}) }}" onsubmit="return confirm('Supprimer ce manga ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ manga.id) }}">
    <button class="btn-default btn-delete">
        <i class="fas fa-trash"></i>
    </button>
</form>
